<div class="block panel panel-primary">
	<div class="panel-heading">
		<h3>{{block_title}}</h3>
	</div>
	<div class="panel-body">
		<div class="content">{{content}}</div>
	</div>
</div>			
		]]></html_code>
	</tpl>

