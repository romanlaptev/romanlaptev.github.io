<IfModule mod_rewrite.c>
	RewriteEngine On
	
	#устанавливаем базовый URL
	RewriteBase / 

	#проверяем, что запрошенной директории не существует.
	RewriteCond %{REQUEST_FILENAME} !-f 

	#проверяем, что запрошенного файла не существует.
	RewriteCond %{REQUEST_FILENAME} !-d 

	#если два верхних условия выполнены – передаём обработку в файл index.php
	RewriteRule . /index.php [L] 
	#RewriteRule . /smarty_site/index.php [L] 
	##RewriteRule ^(.*) index.php
</IfModule>
